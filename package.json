{
  "name": "leonidboykov.com",
  "version": "1.0.0",
  "description": "My personal Hugo powered blog",
  "main": "sass/main.sass",
  "scripts": {
    "build": "npm run build-clean && npm run build-sass && npm run build-postcss",
    "build-clean": "rimraf static/css",
    "build-postcss": "postcss --use autoprefixer cssnano css-mqpacker --map false --output static/css/main.css static/css/main.css",
    "build-sass": "node-sass --output-style expanded --source-map true sass/main.sass static/css/main.css",
    "serve": "npm run build-sass -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leonidboykov/leonidboykov.com.git"
  },
  "keywords": [
    "hugo",
    "blog",
    "responsive",
    "flexbox"
  ],
  "author": "Leonid Boykov <leonid.v.boykov@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leonidboykov/leonidboykov.com/issues"
  },
  "homepage": "https://github.com/leonidboykov/leonidboykov.com#readme",
  "devDependencies": {
    "autoprefixer": "^8.0.0",
    "css-mqpacker": "^6.0.2",
    "cssnano": "^3.10.0",
    "node-sass": "^4.7.2",
    "postcss-cli": "^5.0.0",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "milligram": "^1.3.0",
    "normalize.css": "^8.0.0"
  }
}
